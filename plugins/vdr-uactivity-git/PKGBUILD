# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# See http://wiki.archlinux.org/index.php/VCS_PKGBUILD_Guidelines
# for more information on packaging from GIT sources.

# Maintainer: Alexander Grothe <seahawk1986[at]hotmail[dot]com>
pkgname=vdr-uactivity-git
pkgver=20130316
_pkgname=vdr-uactivity
_vdrapi=1.7.41
pkgrel=1
pkgdesc="activity signals for the Video Disc Recorder"
url="http://projects.vdr-developer.org/projects/plg-uactivity"
arch=('x86_64' 'i686')
license=('GPL2')
depends=("vdr-api=${_vdrapi}")
_plugname=$(echo $pkgname | sed 's/vdr-//g')
replaces=("vdr-plugin-$_plugname" "$_pkgname")
conflicts=("vdr-plugin-$_plugname" "$_pkgname")
makedepends=('git')
backup=()
options=()
#install=
noextract=()
source=()
md5sums=()

_gitroot=git://projects.vdr-developer.org/vdr-plugin-uactivity.git
_gitname=vdr-plugin-uactivity

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  cp Makefile.1.7.x Makefile
  make
}

package() {
  cd "$srcdir/$_gitname-build"

  make DESTDIR="$pkgdir/" install

}

# vim:set ts=2 sw=2 et:
