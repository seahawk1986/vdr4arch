# Maintainer: Alexander Grothe <seahawk1986[at]hotmail[dot]com>
pkgname=vdr-vnsiserver-git
_pkgname=vdr-vnsiserver
pkgver=20130402
_vdrapi=2.0.0
pkgrel=1
pkgdesc="a PVR plugin for XBMC clients"
url=""
arch=('x86_64' 'i686')
license=('GPL2')
depends=("vdr-api=${_vdrapi}")
install="$pkgname.install"
_plugname=$(echo $_pkgname | sed 's/vdr-//g')
replaces=("vdr-plugin-$_plugname" "$pkgname")
conflicts=("vdr-plugin-$_plugname" "$pkgname" )
backup=("var/lib/vdr/plugins/vnsiserver/allowed_hosts.conf")
source=()
md5sums=('SKIP')

_gitroot=git://github.com/FernetMenta/xbmc-pvr-addons.git
_gitname=xbmc-pvr-addons
_gitbranch=vnsi4

package() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone -b ${_gitbranch} --single-branch $_gitroot $_gitname
  fi
  msg "create target dir"
  mkdir -p $pkgdir/usr/lib/vdr/plugins
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build/addons/pvr.vdr.vnsi/vdr-plugin-${_plugname}"

  mkdir -p $pkgdir/usr/lib/vdr/plugins
  sed -i "s/10725)/10725/" streamer.c
  make
  make DESTDIR=$pkgdir install
  mkdir -p $pkgdir/var/lib/vdr/plugins/vnsiserver/
  install -Dm755 vnsiserver/* $pkgdir/var/lib/vdr/plugins/vnsiserver4
}
