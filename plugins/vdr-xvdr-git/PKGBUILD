# Maintainer: Alexander Grothe <seahawk1986[at]hotmail[dot]com>
pkgname=vdr-xvdr-git
_pkgname=vdr-xvdr
pkgver=20130316
#_gitver=cae425bd
_vdrapi=1.7.41
pkgrel=1
pkgdesc=""
url=""
arch=('x86_64' 'i686')
license=('GPL2')
depends=("vdr-api=${_vdrapi}")
makedepends=('zlib' 'libtool')
install="$pkgname.install"
_plugname=$(echo $_pkgname | sed 's/vdr-//g')
replaces=("vdr-plugin-$_plugname" "$_pkgname")
conflicts=("vdr-plugin-$_plugname" "$_pkgname")
source=()
md5sums=('SKIP')

_gitroot=git://github.com/pipelka/vdr-plugin-xvdr.git
_gitname=vdr-plugin-xvdr

package() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "create target dir"
  mkdir -p $pkgdir/usr/lib/vdr/plugins
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  mkdir -p $pkgdir/usr/lib/vdr/plugins
  make
  make install DESTDIR=$pkgdir
  mkdir -p $pkgdir/var/lib/vdr/plugins/xvdr
  install -Dm755 xvdr/* $pkgdir/var/lib/vdr/plugins/xvdr
}
