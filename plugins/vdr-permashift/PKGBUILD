# Maintainer: Christopher Reimer <c[dot]reimer[at]googlemail[dot]com>
pkgname=vdr-permashift
pkgver=0.5.1
_vdrapi=1.7.41
pkgrel=4
pkgdesc="Permanent timeshift plugin"
url="http://ein-eike.de/vdr-plugin-permashift/"
arch=('x86_64' 'i686')
license=('GPL2')
depends=("vdr-api=${_vdrapi}")
_plugname=$(echo $pkgname | sed 's/vdr-//g')
source=("http://ein-eike.de/wordpress/wp-content/uploads/2013/01/permashift-$pkgver.tar.gz"
	"fix-Makefile.diff")
md5sums=('6191ca67bcb094c2fc4f270147591c31'
         'ff616a947cdb7707c6b14de21d9d4232')

package() {
  cd "${srcdir}/${_plugname}"
  patch -p1 -i $srcdir/fix-Makefile.diff
  mkdir -p $pkgdir/usr/lib/vdr/plugins
  make CFLAGS="$(pkg-config vdr --variable=cflags)" \
       CXXFLAGS="$(pkg-config vdr --variable=cxxflags)" \
       VDRDIR="/usr/include/vdr" \
       LIBDIR="$pkgdir/$(pkg-config vdr --variable=libdir)" \
       LOCALEDIR="$pkgdir/$(pkg-config vdr --variable=locdir)" \
       all
}
