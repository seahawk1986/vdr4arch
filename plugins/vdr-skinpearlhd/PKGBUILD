# Maintainer: Christopher Reimer <c[dot]reimer[at]googlemail[dot]com>
pkgname=vdr-skinpearlhd
pkgver=20130122
_gitver=9899940
_vdrapi=1.7.37
pkgrel=2
pkgdesc="conversion of the PearlHD-Skin written by mapovi to a native vdr-plugin"
url="http://projects.vdr-developer.org/projects/show/plg-skinpearlhd"
arch=('x86_64' 'i686')
license=('GPL2')
depends=('imagemagick' "vdr-api=${_vdrapi}")
install="$pkgname.install"
optdepends=()
_plugname=$(echo $pkgname | sed 's/vdr-//g')
replaces=("vdr-plugin-$_plugname")
conflicts=("vdr-plugin-$_plugname")
source=("http://projects.vdr-developer.org/git/vdr-plugin-$_plugname.git/snapshot/vdr-plugin-$_plugname-$_gitver.tar.bz2")
md5sums=('0e011dab84289d54aa10ea83987f8ea6')

build() {
  cd "${srcdir}/vdr-plugin-${_plugname}-${_gitver}"
  make
}

package() {
  cd "${srcdir}/vdr-plugin-${_plugname}-${_gitver}"

  make DESTDIR=${pkgdir} install
}
