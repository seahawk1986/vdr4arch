# Maintainer: Christopher Reimer <c[dot]reimer[at]googlemail[dot]com>
pkgname=vdr-externalplayer
pkgver=0.3.0
_vdrapi=1.7.39
pkgrel=2
pkgdesc="use external players in VDR"
url="http://sourceforge.net/projects/externalplayer/"
arch=('x86_64' 'i686')
license=('GPL2')
depends=('gcc-libs' "vdr-api=${_vdrapi}")
backup=('var/lib/vdr/plugins/externalplayer/externalplayer.conf')
install="${pkgname}.install"
_plugname=$(echo $pkgname | sed 's/vdr-//g')
source=("http://hg.uli-eckhardt.de/$_plugname/archive/V$pkgver.tar.bz2")
md5sums=('a003d970199a3a634a075041ea0360b6')

build() {
  cd "${srcdir}/${_plugname}-V${pkgver}"

  make
}
package() {
  cd "${srcdir}/${_plugname}-V${pkgver}"

  make DESTDIR=${pkgdir} install
}
