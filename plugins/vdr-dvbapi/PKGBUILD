# Maintainer: Christopher Reimer <vdr4arch[at]creimer[dot]net>
pkgname=vdr-dvbapi
pkgver=20130217
_gitver=555272d2
_vdrapi=1.7.41
pkgrel=5
pkgdesc="A bridge between VDR and OScam."
url="https://github.com/manio/vdr-plugin-dvbapi"
arch=('x86_64' 'i686')
license=('GPL2')
depends=('gcc-libs' 'libdvbcsa' 'oscam' "vdr-api=${_vdrapi}")
_plugname=$(echo $pkgname | sed 's/vdr-//g')
source=("https://github.com/manio/vdr-plugin-$_plugname/archive/$_gitver.tar.gz")
md5sums=('709e906159c4f05cc0c35b22f23b038d')

build() {
  cd "${srcdir}/vdr-plugin-${_plugname}-${_gitver}"*

  make LIBDVBCSA=1
}

package() {
  cd "${srcdir}/vdr-plugin-${_plugname}-${_gitver}"*

  make LIBDVBCSA=1 DESTDIR="$pkgdir" install
}
