# Maintainer: Alexander Grothe <alexander[dot]grothe[at]googlemail[dot]com>
pkgname=vdr-zappilot-git
_pkgname=vdr-zappilot
pkgver=20130402
_vdrapi=2.0.0
pkgrel=1
pkgdesc="a plugin for VDR forked from the plugin pilotskin to browse EPG"
url="http://projects.vdr-developer.org/projects/plg-zappilot"
arch=('x86_64' 'i686')
license=('GPL')
depends=("vdr-api=${_vdrapi}")
makedepends=('git')
_plugname=$(echo $pkgname | sed 's/vdr-//g')
replaces=("vdr-plugin-$_plugname" "vdr-plugin-$_pkgname")
conflicts=("vdr-plugin-$_plugname" "vdr-plugin-$_pkgname")
md5sums=('SKIP') #generate with 'makepkg -g'
options=(!strip)

_gitroot=git://projects.vdr-developer.org/vdr-plugin-zappilot.git
_gitname=vdr-plugin-zappilot

package() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "create target dir"
  mkdir -p $pkgdir/usr/lib/vdr/plugins
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  make
  make DESTDIR="$pkgdir" install
}
